<%-include('partial/adminheader'); -%>
<div class="container m-5">
    <div class="headline">
      <h4 class="text-center ">Upcoming Evenets</h4>
</div>
<form action="/upcoming-event-post" method="post">
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Date</label>
        <input type="datetime-local" name="date" class="form-control " id="exampleFormControlInput1"  required>
      </div>
      <div class="mb-3">
        <label for="exampleFormControlInput2" class="form-label">Event name</label>
        <input type="text" name="event" class="form-control " id="exampleFormControlInput2"  required>
      </div>
      <div class="mb-3">
        <label for="exampleFormControlInput3" class="form-label">Event link</label>
        <input type="text" name="link" class="form-control" id="exampleFormControlInput3"  required>
      </div>
      <div class="mt-5 d-grid gap-2 col-6 mx-auto">
        <button type="submit" class="btn btn-outline-dark w-100" id="submit">Done</button>
    </div> 
</form>


