<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Untold Stories|FAA</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/main.css">
    <!-- Bootstrap icon-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
</head>
<body class="bg-black">
  <div class="card shadow-lg logobg bg-black opacity-75">
    <div class="">
        <h4 class="m-4 text-center text-white">Untold stories</h4>
    </div>
  </div>
    <div class="untold container">
    <%untlds.forEach(function(ed,i){%> 
    <div class="card mb-3 bg-black">
        <%if(ed.image){%>
        <img src="<%=ed.image%>" class="img card-img-top " alt="...">
        <%}else{%>
        <img src="images/banner.jpg" class="img card-img-top " alt="...">
        <%}%>
       
        <div class="card-img-overlay bg-black bg-opacity-25">
          
          <p class="m-5 h3 text-danger card-text bg-black bg-opacity-75 ">"<%=ed.title%>
          "
         </p>
          
          <p><a class="m-5 btn btn-outline-light w-25" href="/untold_stories/<%=ed.id%>">more</a></p>

        </div>
    </div>
    <%});%>
    </div>
   
     
   

   
    


   

   


    <div class="footer-text">
        <div class="fixed-bottom fs-6 text-light text-center">	&copy; Tasfia Noor 2022</div>
      </div>
     <!-- Bootstrap Bundle with Popper -->
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    
       <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
       <script>
         AOS.init({
            offset: 200, // offset (in px) from the original trigger point
            //delay: 0, // values from 0 to 3000, with step 50ms
            duration: 1200,
         });
       </script>
</body>
</html>