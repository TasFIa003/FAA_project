<%-include('partial/adminheader'); -%>
<div class="container m-5">
    <div class="headline">
      <h4 class="text-center ">Financial Events </h4>
</div>
<%fns.forEach(function(ed,i){%>
<form action="/finupdate/<%=ed.id%>" method="post" enctype="multipart/form-data">
     <div class="input-group mb-3">
        <input type="file" name="image" value="">
        <% if(ed.image){%>
          <img class="up-img mt-3"src="<%=ed.image%>" alt="" width="20%">
        <% } %>
      </div>
      <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Title:</label>
        <input type="text" name="title" value="<%=ed.title%>" class="form-control " id="exampleFormControlInput1"  >
      </div>
      
      <div class="mb-3">
        <label class="form-label">Details</label>
        <textarea type="text"  class="form-control" name="details"  id="summernote" value="" ><%-ed.details%></textarea>
      </div>
      <div class="mt-5 d-grid gap-2 col-6 mx-auto">
        <button type="submit" class="btn btn-outline-dark w-100" id="submit">Done</button>
    </div> 
</form>
<%});%>

<!-- Bootstrap Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
<script>
    $('#summernote').summernote({
      tabsize: 2,
      height: 180,
      toolbar: [
        ['style', ['style']],
        ['font', ['bold', 'underline', 'clear']],
        ['color', ['color']],
        ['para', ['ul', 'ol', 'paragraph']],
        ['table', ['table']],
        ['insert', ['link', 'picture', 'video']],
        ['view', ['fullscreen', 'codeview', 'help']]
      ]
    });
  </script>

</body>
</html>