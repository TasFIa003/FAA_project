<%-include('partial/adminheader'); -%>
<div class="container m-5">
    <div class="headline">
      <h4 class="text-center ">Requested Blogs</h4>
</div>
<%blgs.forEach(function(blg){%>
<div class="card m-5 bg-light shadow-lg" style="max-width: 1040px;">
    <div class="row g-0">
      
      <div class="col-md-8">
        <div class="card-body">
          <%if(blg.image){%>
            <img src="<%=blg.image%>" class="mt-3 d-block mx-auto card-img w-50" alt="...">
            <%}else{%>
            <img src="images/banner.jpg" class="mt-3 d-block mx-auto card-img w-50" alt="...">
            <%}%> 
          <h5 class="card-title"><%=blg.title%></h5>
          <p class="card-text"><%-blg.details%></p>
         
            <form action="/dashboard/<%=blg.id%>" method="post">
              <button type="submit" class="btn btn-success btn-sm" ><i class="bi bi-check-lg"></i></button>
              <a  class="btn btn-danger btn-sm" href="/delete_blog/<%=blg.id%>"><i class="bi bi-x-lg"></i></a>
             </form>
        
        </div>
      </div>
      
    </div>

</div>
<%});%>
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>
</html>
